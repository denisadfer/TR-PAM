<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddMynft"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/create_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Item"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_tag"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_img_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Set Image"
                android:textStyle="bold"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/create_img_nft"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_image_24" />

            <TextView
                android:id="@+id/create_owner_nft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created By user"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Nft name"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_title_nft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Token"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/create_token_nft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="Nft Token"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/create_btn_nft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Nft"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

